<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Page.AreaCirculo"
             Title="Area del círculo">
    <VerticalStackLayout Padding="30" Spacing="10">
        
        <Label 
         Text="&#10;Calcular area del círculo"
         VerticalOptions="Center" 
         HorizontalOptions="Center"
         FontAttributes="Bold"
         FontSize= "20" />

        <Label Text="&#10;Ingrese el radio del círculo en cm: " />
        <Entry x:Name="radio" Keyboard="Numeric" />

        <Button x:Name="btnAreaCirculo" Text="Calcular" BackgroundColor="DarkBlue" Clicked="btnAreaCirculo_Clicked" />
        <Button x:Name="btnLimpiar" Text="Limpiar" BackgroundColor="Orange" Clicked="btnLimpiar_Clicked"/>

    </VerticalStackLayout>
</ContentPage>