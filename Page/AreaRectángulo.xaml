<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Page.AreaRectángulo"
             Title="Area del rectángulo">
    <VerticalStackLayout Padding="30" Spacing="10">
        
        <Label 
            Text="&#10;Calcular area del rectángulo"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontAttributes="Bold"
            FontSize= "20" />

        <Label Text="&#10;Ingrese la base del rectangulo en cm: " />
        <Entry x:Name="baseRectangulo" Keyboard="Numeric" />
        
        <Label Text="&#10;Ingrese la altura del rectangulo en cm: " />
        <Entry x:Name="alturaRectangulo" Keyboard="Numeric" />

        <Button x:Name="btnAreaRectangulo" Text="Calcular" BackgroundColor="DarkBlue" Clicked="btnAreaRectangulo_Clicked" />
        <Button x:Name="btnLimpiar" Text="Limpiar" BackgroundColor="Orange" Clicked="btnLimpiar_Clicked"/>

    </VerticalStackLayout>
</ContentPage>