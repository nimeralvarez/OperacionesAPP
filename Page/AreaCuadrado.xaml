<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Page.AreaCuadrado"
             Title="Area del cuadrado">
    <VerticalStackLayout Padding="30" Spacing="10">
        
        <Label 
            Text="&#10;Calcular area del cuadrado"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontAttributes="Bold"
            FontSize= "20" />

        <Label Text="&#10;Ingrese un Lado del cuadrado en cm: " />
        <Entry x:Name="lado" Keyboard="Numeric" />

        <Button x:Name="btnAreaCuadrado" Text="Calcular" BackgroundColor="DarkBlue" Clicked="btnAreaCuadrado_Clicked" />
        <Button x:Name="btnLimpiar" Text="Limpiar" BackgroundColor="Orange" Clicked="btnLimpiar_Clicked"/>
        
    </VerticalStackLayout>
</ContentPage>